        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Denture Exra"
            android:textColor="#C0C0C0"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_dentureExtra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
