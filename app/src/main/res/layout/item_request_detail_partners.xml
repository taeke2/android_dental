            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="end"
            android:maxLines="5"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5" />

    </LinearLayout>

