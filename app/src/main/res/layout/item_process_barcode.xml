<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <TextView
            android:id="@+id/txt_barcode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textSize="16sp"
            android:text="1234567890"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/txt_articulator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:text="12345"
            android:textSize="14sp"
            android:textColor="@color/green"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/txt_barcode"
            app:layout_constraintLeft_toRightOf="@+id/txt_barcode"
            app:layout_constraintBottom_toBottomOf="@+id/txt_barcode"/>
        <Button
            android:id="@+id/btn_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="10dp"
            android:foreground="@drawable/icon_close"
            android:background="@drawable/circle_button"
            app:layout_constraintTop_toTopOf="@+id/txt_barcode"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/txt_barcode"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#D3D7DC"
            app:layout_constraintTop_toBottomOf="@+id/txt_barcode"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>