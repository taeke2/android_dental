        <!--            android:paddingTop="5dp"-->
        <!--            android:text="담당자"-->
        <!--            android:textSize="15dp" />-->

        <!--        <TextView-->
        <!--            android:id="@+id/txt_managerName"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:layout_gravity="left"-->
        <!--            android:layout_marginLeft="10dp"-->
        <!--            android:layout_weight="1"-->
        <!--            android:paddingTop="5dp"-->
        <!--            android:text="김이박"-->
        <!--            android:textColor="#CCCCCC"-->
        <!--            android:textSize="15dp" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_deadlineDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021-06-28 PM 16:54:23"
            android:textColor="@color/light_gray" />

        <TextView
            android:id="@+id/txt_orderFinishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2021-06-28 PM 17:50:22"
            android:textColor="#4682B4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dent1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_right"
                android:gravity="center"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/txt_dent2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#CCCCCC" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_dent3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_right"
                android:gravity="center"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/txt_dent4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark_gray" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>