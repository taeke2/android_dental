<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/accordion_shape"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <TextView
            android:id="@+id/txt_materials_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자재명"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

<!--        <TextView-->
<!--            android:id="@+id/txt_materials_account"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="3dp"-->
<!--            android:text="자재 거래처"-->
<!--            android:textSize="12sp" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/txt_warehousing_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="20dp"
        android:textAlignment="textEnd"
        android:textColor="@color/light_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_materials_stock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="@drawable/gold_count_shape"
        android:text="8"
        android:textAlignment="center"
        android:textColor="#FFFFFF" />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/btn_alarm"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="{fa-angle-right}"
        android:textSize="20sp"
        />
</LinearLayout>